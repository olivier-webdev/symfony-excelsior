<header class="d-flex flex-row-nowrap justify-content-center p20">
    <div class="content flex-fill d-flex flex-row-nowrap align-items-center justify-content-between">
        <a class="header-logo" href="{{ path('home') }}">
            <img src="{{ asset('images/ques.jpg') }}"  alt="logo">
        </a>
        <div class="header-search p10 flex-fill">
            <i class="fas fa-search"></i>
            <input type="text">
        </div>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <div class='d-flex flex-row-nowrap align-items-center justify-content-center'>
            <a href={{ path('user_current')}}>
                <img src={{ app.user.avatar }} alt="user_avatar" class="avatar mr10">
            </a>
                <a href={{ path('logout')}} class="btn btn-primary mr5">Logout</a>
            </div>
            {% else %}
            <div>
                <a href={{ path('register')}} class="btn btn-primary mr5">Register</a>
                <a href={{ path('login')}} class="btn btn-primary-light">Login</a>
            </div>
        {% endif %}
    </div>
</header>